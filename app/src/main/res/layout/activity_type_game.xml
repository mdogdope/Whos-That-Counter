<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	android:orientation="vertical"
	tools:context=".TypeGame">

	<ImageButton
		android:id="@+id/tg_back"
		android:layout_width="90dp"
		android:layout_height="64dp"
		android:layout_margin="16dp"
		android:background="@drawable/ui_button"
		android:padding="16dp"
		android:scaleType="centerCrop"
		android:src="@drawable/ic_back_arrow"
		tools:ignore="ContentDescription" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			tools:ignore="UseCompoundDrawables">

			<ImageView
				android:id="@+id/tg_icon"
				android:layout_width="195dp"
				android:layout_height="195dp"
				android:src="@drawable/type_bug"
				tools:ignore="ContentDescription" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="@drawable/ui_label"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="8dp">

				<TextView
					android:id="@+id/tg_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="BUG"
					android:textColor="@color/black"
					android:textSize="28sp"
					tools:ignore="HardcodedText" />

				<TextView
					android:id="@+id/tg_mode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="is weak/resistant to"
					android:textColor="@color/black"
					android:textSize="24sp"
					tools:ignore="HardcodedText" />
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dp"
			android:gravity="center"
			android:orientation="vertical">

			<GridLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:columnCount="6"
				android:rowCount="3">

				<ImageButton
					android:id="@+id/tg_bug"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_bug"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_dark"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_dark"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_dragon"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_dragon"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_electric"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_electric"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_fairy"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_fairy"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_fighting"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_fighting"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_fire"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_fire"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_flying"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_flying"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_ghost"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_ghost"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_grass"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_grass"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_ground"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_ground"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_ice"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_ice"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_normal"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_normal"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_poison"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_poison"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_psychic"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_psychic"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_rock"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_rock"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_steel"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_steel"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

				<ImageButton
					android:id="@+id/tg_water"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="6dp"
					android:background="@drawable/ui_button"
					android:padding="4dp"
					android:scaleType="fitCenter"
					android:src="@drawable/type_water"
					android:tag="unpressed"
					tools:ignore="ContentDescription" />

			</GridLayout>

			<Button
				android:id="@+id/tg_check"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="64dp"
				android:background="@drawable/ui_button"
				android:text="CHECK"
				android:textSize="24sp"
				tools:ignore="HardcodedText" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>