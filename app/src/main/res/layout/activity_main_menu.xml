<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".MainMenu">

	<androidx.fragment.app.FragmentContainerView
		android:id="@+id/confirm_exit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		
<!--		<TextView-->
<!--			android:layout_width="match_parent"-->
<!--			android:layout_height="wrap_content"-->
<!--			android:textSize="48sp"-->
<!--			android:textColor="@color/black"-->
<!--			android:background="@drawable/ui_label"-->
<!--			android:text="Who's That Counter?"-->
<!--			android:textAlignment="center"-->
<!--			android:layout_margin="16dp"/>-->
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="256dp"
			android:scaleType="fitCenter"
			android:src="@drawable/whos_that_counter_icon" 
			android:layout_margin="32dp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal">
			<Button
				android:id="@+id/offense"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:background="@drawable/ui_button"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:text="Offense"
				android:textSize="32sp"
				tools:ignore="HardcodedText" />

			<Button
				android:id="@+id/defense"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:background="@drawable/ui_button"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:text="Defense"
				android:textSize="32sp"
				tools:ignore="HardcodedText" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>